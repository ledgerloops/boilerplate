{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Basic build environment for reference",
  "files": [
    "src",
    "lib"
  ],
  "main": "index.js",
  "scripts": {
    "build": "babel src -d lib --source-maps --extensions \".ts\"",
    "coverage": "jest --collect-coverage",
    "jest": "jest",
    "lint": "eslint src/ test/ --ext .ts",
    "prettier": "prettier --write \"{src,test,__mocks__}/**/*.ts\"",
    "test": "npm run build && npm run lint && npm run jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ledgerloops/boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ledgerloops/boilerplate/issues"
  },
  "homepage": "https://github.com/ledgerloops/boilerplate#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.3",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "babel-cli": "^6.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
